<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/round">

            <com.pixtanta.android.Views.BackgroundChangingView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_animation_list"
                app:borderRadius="100"
                app:enterFadeDuration="500"
                app:exitFadeDuration="500"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="10dp"
                android:background="@drawable/border_rad">

                <com.pixtanta.android.Views.BackgroundChangingView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_animation_list"
                    app:borderRadius="50"
                    app:enterFadeDuration="500"
                    app:exitFadeDuration="500"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_rad">

                <com.pixtanta.android.Views.BackgroundChangingView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_animation_list"
                    app:borderRadius="50"
                    app:enterFadeDuration="500"
                    app:exitFadeDuration="500"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>