<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_vert"
    android:clickable="true"
    android:padding="5dp"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:padding="4dp"
        android:background="?attr/lightAsh"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/photoView"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/noteText"
				android:textColor="?attr/black"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/afterText"
                android:layout_marginTop="5dp"
                android:visibility="gone"
				android:textColor="?attr/black"
                android:textSize="15sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="15dp"
                android:id="@+id/buttonHolder"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:duplicateParentState="true"
                    android:id="@+id/accept"
                    android:backgroundTint="@color/colorPrimaryRed"
                    android:textColor="@color/white"
					android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="10dp"
                    android:paddingHorizontal="20dp"
                    android:text="@string/accept"
                     />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:id="@+id/reject"
                    android:backgroundTint="@color/ash"
                    android:textColor="@color/black"
					android:textStyle="bold"
                    android:duplicateParentState="true"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:paddingVertical="0dp"
                    android:layout_marginHorizontal="10dp"
                    android:paddingHorizontal="20dp"
                    android:text="@string/reject"
                     />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/noteDate"
                android:gravity="end"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="5dp"
                android:textColor="?attr/icon_pri_red"
                android:textSize="14sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>